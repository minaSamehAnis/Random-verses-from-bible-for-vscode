{
  "name": "arabic-verse-from-bible",
  "displayName": "Arabic Verse from bible",
  "description": "This extension shows every minute an random verse from the bible in arabic",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minaSamehAnis/Random-verses-from-bible-for-vscode.git"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showRandomVerse",
        "title": "عرض آية عشوائية"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ]
}
